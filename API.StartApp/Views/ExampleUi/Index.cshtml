@using API.Base.Web.Base.Extensions.HtmlHelpers
@model IEnumerable<API.StartApp.Example.ExampleEntity>

@{
ViewData["Title"] = "Example";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-12 col-md-6">
    </div>
    <div class="col-12 col-md-6 d-flex justify-content-end pb-2">
		<a class="btn btn-outline-primary mr-2" asp-action="ReOrder">ReOrder</a>
        <a class="btn btn-outline-primary" asp-action="Create">Create new Example</a>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
                <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.Name)</span>
            </td>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.Age)</span>
            </td>
            <td>
                    <span>@Html.DisplayFor(modelItem => item.Slug)</span>
            </td>
            <td>
				<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <span></span>
				<a asp-action="Details" asp-route-id="@item.Id">Details</a> <span></span>
				<a asp-action="Delete" asp-route-id="@item.Id">Delete</a> <span></span>
            </td>
    </tr>
    }
    </tbody>
</table>